#include<stdio.h>
void main(){
    int n;
    printf("Enter the no. of rows: ");
    scanf("%d",&n);
    for(int i=0; i<n; i++){
        
        for(int j=1; j<n-i; j++){
            printf("%s"," ");
        }
        for(int j=0; j<i; j++){
            printf("%s","*");
        }
        for(int j=0; j<=i; j++){
            printf("%s","*");
        }
        printf("\n");
    }
    for(int i=0; i<n; i++){
        for(int j=0; j<i; j++){
            printf("%s"," ");
        }
        for(int j=0; j<n-i; j++){
            printf("%s","*");
        }
        for(int j=1; j<n-i; j++){
            printf("%s","*");
        }
        printf("\n");
    }
}

