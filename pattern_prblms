/*------------------------------------------------------------------------------
ABCDEFG
 ABCDE
  ABC
   A */
#include<stdio.h>
void main(){
    int n;
    printf("Enter the number of rows: ");
    scanf("%d",&n);
    printf("%c",n);
    int strt = (n*2)-1;
    for(int i=1; i<=n; i++){
        int x=65;
        for(int j=1; j<=i; j++){
            printf("%s"," ");
        }
        for(int j=1; j<=strt; j++){
            printf("%c",x);
            x++;
        }
        strt = strt-2;
        printf("\n");
    }
}

/*-------------------------------------------------------------------------------
A
AB
ABC
AB
A */
#include<stdio.h>
void main(){
    int n;
    printf("Enter the number of rows: ");
    scanf("%d",&n);
    printf("%c",n);
    for(int i=1; i<=n; i++){
        int x=65;
        for(int j=0; j<i; j++){
            printf("%c",x);
            x++;
        }
        printf("\n");
    }
    for(int i=1; i<=n; i++){
        int x=65;
        for(int j=n-i; j>=1; j--){
            printf("%c",x);
            x++;
        }
        printf("\n");
    }
}

/*-----------------------------------------------------------------------------
ABCDEBCBA
ABCD DCBA
ABC   CBA
AB     BA
A       A */

#include<stdio.h>
void main(){
    int n;
    printf("Enter the number of rows: ");
    scanf("%d",&n);
    int strt = 65;
    int p = 65+n-2;
    for(int i=0; i<(2*n-1); i++){
        if(i<n){
            printf("%c",strt+i);
        }
        else{
            printf("%c",p);
            p--;
        }
    }
    printf("\n");
    for(int i=0; i<n; i++){
        int x=65;
        for(int j=n-i; j>1; j--){
            printf("%c",x);
            x++;
        }
        for(int j=0; j<i; j++){
            printf("%s"," ");
        }
        for(int j=0; j<=i; j++){
            printf("%s"," ");
        }
        for(int j=n-i; j>1; j--){
            x = 63;
            printf("%c",x+j);
            x--;
        }
        printf("\n");
    }
}

/*---------------------------------------------------------------------------------------
    0
   101
  21012
 3210123
432101234 */
#include<stdio.h>
void main(){
    int n;
    printf("Enter Rows: ");
    scanf("%d",&n);
    for(int i=1; i<=n; i++){
        for(int j=n-i; j>0; j--){
            printf("%s"," ");
        }
        for(int j=1; j<i; j++){
            printf("%d",i-j);
        }
        for(int j=0; j<i; j++){
            printf("%d",j);
        }
        printf("\n");
    }
}

/*-----------------------------------------------------------------------------------
    1
   121
  12321
 1234321
123454321 */
#include<stdio.h>
void main(){
    int n;
    printf("Enter Rows: ");
    scanf("%d",&n);
    for(int i=1; i<=n; i++){
        for(int j=n-i; j>=1; j--){
            printf("%s"," ");
        }
        for(int j=1; j<=i; j++){
            printf("%d",j);
        }
        
        for(int j=1; j<i; j++){
            printf("%d",i-j);
        }
        printf("\n");
    }
}

