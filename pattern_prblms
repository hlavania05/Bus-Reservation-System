#include<stdio.h>
void main(){
    int n;
    printf("Enter no. of rows: ");
    scanf("%d",&n);
    for(int i=1; i<=n; i++){
        for(int j=0; j<n-i; j++){
            printf("%s"," ");
        }
        for(int j=0; j<i; j++){
            printf("%d ",i);
        }
        printf("\n");
    }
}

/*-----------------------------------------------------------------------------
1
23
456
78910 */
#include<stdio.h>
void main(){
    int n;
    printf("Enter no. of rows: ");
    scanf("%d",&n);
    int a = 1;
    for(int i=1; i<=n; i++){
        for(int j=1; j<=i; j++){
            printf("%d",a);
            a++;
        }
        printf("\n");
    }
}

